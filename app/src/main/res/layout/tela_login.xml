<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ufrpe.feelingsbox.gui.TelaLogin">

    <ImageView
        android:id="@+id/logofb"
        android:layout_width="333dp"
        android:layout_height="211dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/feelingsbox"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Email/Nick"
        android:inputType="text|textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/txtsenha"
        app:layout_constraintLeft_toLeftOf="@+id/logofb"
        app:layout_constraintRight_toRightOf="@+id/logofb"
        app:layout_constraintTop_toBottomOf="@+id/logofb"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txtsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txtUsuario"
        app:layout_constraintRight_toRightOf="@+id/txtUsuario"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="312dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/txtsenha"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtsenha"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtsenha"
        app:layout_constraintHorizontal_bias="0.495" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="94dp"
        android:layout_height="45dp"
        android:text=""
        android:visibility="invisible"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnLogin"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btnLogin"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteY="437dp"
        tools:layout_editor_absoluteX="142dp" />

    <TextView
        android:id="@+id/txtCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Cadastre-se"
        app:layout_constraintBottom_toBottomOf="@+id/btnCadastrar"
        app:layout_constraintLeft_toLeftOf="@+id/btnCadastrar"
        app:layout_constraintRight_toRightOf="@+id/btnCadastrar"
        app:layout_constraintTop_toTopOf="@+id/btnCadastrar" />

</android.support.constraint.ConstraintLayout>
